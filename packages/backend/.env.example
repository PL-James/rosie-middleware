# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rosie

# Redis
REDIS_URL=redis://localhost:6379

# GitHub
GITHUB_TOKEN=ghp_your_personal_access_token

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
AUTH_REQUIRED=false  # Set to 'true' to require authentication for all endpoints

# JWS Verification (Phase 3 - Evidence Signatures)
# Option 1: Single JSON array of public keys
# JWS_PUBLIC_KEYS='["-----BEGIN PUBLIC KEY-----\nMII..."]'

# Option 2: Individual numbered keys (easier for multi-line keys)
# JWS_PUBLIC_KEY_1="-----BEGIN PUBLIC KEY-----\nMII...\n-----END PUBLIC KEY-----"
# JWS_PUBLIC_KEY_2="-----BEGIN PUBLIC KEY-----\nMII...\n-----END PUBLIC KEY-----"

# JWS Verification Options
JWS_LOG_FAILURES=true
JWS_MAX_AGE_SECONDS=  # Optional: Maximum age of JWS tokens in seconds

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
