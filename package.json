{
  "name": "rosie-middleware",
  "version": "0.1.0",
  "private": true,
  "description": "ROSIE Middleware Platform - GxP Artifact Management",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "backend:dev": "npm run dev --workspace=backend",
    "backend:build": "npm run build --workspace=backend",
    "backend:start": "npm run db:migrate && npm run start:prod --workspace=backend",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:studio": "npm run db:studio --workspace=backend",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "test": "npm run test --workspaces",
    "test:ci": "npm run test --workspaces -- --run --reporter=json --outputFile=test-results.json",
    "generate-evidence": "tsx scripts/generate-evidence.ts",
    "verify-evidence": "tsx scripts/verify-evidence.ts",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "glob": "^13.0.1",
    "jose": "^6.1.3",
    "prettier": "^3.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
